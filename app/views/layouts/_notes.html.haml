-@notes.each do |note|
  -if current_user == nil
    =link_to note_path(note) do
      .the-note
        %h3
          =note.title
        %p
          =truncate(note.body, length: 45)
        %p
          =time_ago_in_words(note.created_at)
          ago by
          =User.find(note.user_id).first_name
  -elsif current_user.id == note.user_id
    =link_to mynote_path(note) do
      .the-note
        %h3
          =note.title
        %p
          =truncate(note.body, length: 45)
        %p
          =time_ago_in_words(note.created_at)
          ago by
          =User.find(note.user_id).first_name
  -else
    =link_to note_path(note) do
      .the-note
        %h3
          =note.title
        %p
          =truncate(note.body, length: 45)
        %p
          =time_ago_in_words(note.created_at)
          ago by
          =User.find(note.user_id).first_name
