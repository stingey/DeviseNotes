%h2
  All Notes
-@notes.each do |note|
  %h3
    =link_to note.title ,current_user.id == note.user_id ? mynote_path(note) : note_path(note)
  %p
    =truncate(note.body, length: 20)
  %p
    =time_ago_in_words(note.created_at)

= link_to "sign in", new_user_session_path
= link_to "sign out", destroy_user_session_path, method: :delete
= link_to "new note", new_note_path
= link_to "my notes", mynotes_path
